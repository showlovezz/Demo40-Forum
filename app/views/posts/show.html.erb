<section id="section_forum_show">
	<div class="container">
		<div class="row">
			<div class="col-10 offset-1">
				
				<% if user_signed_in?%>
					<div class="btn-group mb-2" role="group" aria-label="Basic example">
						<%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-warning" %>
						<%= link_to "Delete", post_path(@post),method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-warning" %>
					</div>
				<% end %>

				<h1 class="text-center mb-2"><%= @post.title %></h1>
				<%= image_tag @post.image.url, class: "rounded mx-auto d-block img" %>
				<div class="mt-3 text-size">
					<%= simple_format @post.content %>
				</div>
				

			</div>
		</div>
	</div>
</section>