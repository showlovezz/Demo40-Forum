<section id="section_forum_index">
	<div class="container">
		<div class="row">
			<div class="col-10 offset-1">
				
				<div class="forum">
					<% @posts.each do |post| %>
						<div class="row forum-item">
							<div class="col-3">
								<% if post.image.attached? %>
								 <%= image_tag post.image, class: "img" %>
								<% end %>
							</div>
							<div class="col-9">
								<h3 class="mb-4"><%= link_to post.title, post_path(post),class: "text-info" %></h3>
								<p>
									<%= truncate(post.content, length: 160) %>
									<%= link_to "繼續閱讀", post_path(post), class: "badge badge-info" %>
								</p>
							</div>
						</div>
						<hr>
					<% end %>
				</div>
				
			</div>
		</div>
	</div>
</section>
